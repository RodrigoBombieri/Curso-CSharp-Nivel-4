@model IEnumerable<dominio.Pokemon>

@{
    ViewData["Title"] = "Listado Pokemons";
}

<h1>Pokedex</h1>

<p> 
    <a class="btn btn-primary" asp-action="Create">Agregar Nuevo</a>
</p>
<p>
    <form asp-action="index" method="get">
        <input type="text" class="form-control" placeholder="Búsqueda por nombre.." 
        name="filtro" value="@ViewBag.filtro" />
        
        <input type="submit" value="Buscar" class="btn btn-secondary" />
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.UrlImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>             
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td> *@
            <td>
                @* @Html.DisplayFor(modelItem => item.UrlImagen) *@
                <img src="@item.UrlImagen" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Id">Modificar</a>
                @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) *@
                <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Detalles</a>
               @*  @Html.ActionLink("Details", "Details", new { id=item.Id }) *@
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Eliminar</a>
                @* @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
            </td>
        </tr>
}
    </tbody>
</table>
