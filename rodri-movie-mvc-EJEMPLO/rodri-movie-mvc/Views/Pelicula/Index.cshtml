@model IEnumerable<rodri_movie_mvc.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Películas</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Agregar Película</a>
</p>
<table class="table table-striped" id="peliculasTable">
    <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plataforma)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.PosterUrlPortada" height="100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plataforma.Nombre)
            </td>
            <td>
                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Modificar</a>
                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Ver Detalle</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#peliculasTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.10/i18n/es-ES.json'
                },
                responsive: true,
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50,-1],[5,10,25,50,"Todos"]],
                columnDefs: [
                    {
                        targets: 0,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
}

