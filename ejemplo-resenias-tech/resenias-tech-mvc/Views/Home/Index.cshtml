@model List<Articulo>
@{
    ViewData["Title"] = "Home Page";
    var estadisticas = ViewBag.Estadisticas as Dictionary<int, (int Cantidad, double Promedio)>;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row g-4">
    @foreach (var articulo in Model)
    {
        var cantidadOpiniones = 0;
        var promedioPuntuacion = "N/A";

        if (estadisticas != null && estadisticas.ContainsKey(articulo.Id))
        {
            var stats = estadisticas[articulo.Id];
            cantidadOpiniones = stats.Cantidad;
            promedioPuntuacion = stats.Promedio.ToString("F1");
        }

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100" style="max-width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@articulo.Nombre</h5>
                    <p class="card-text">@articulo.Descripcion</p>
                    <p class="card-text">@articulo.Categoria.Descripcion</p>
                    <p class="card-text"><strong>$ @articulo.precio</strong></p>
                </div>
                <div class="card-footer">
                    <a asp-controller="Articulo" asp-action="Details" asp-route-id="@articulo.Id" class="btn btn-info">Detalles</a>
                    <small class="text-body-secondary d-block">
                        📝 <strong>@cantidadOpiniones</strong> opiniones
                    </small>
                    <small class="text-body-secondary d-block">
                        ⭐ Promedio: <strong>@promedioPuntuacion</strong>
                    </small>
                </div>
            </div>
        </div>
    }
</div>
